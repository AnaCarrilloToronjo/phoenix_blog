<div class="experience-all-container">
    <div class="experience-intro-container">
        <img class="resume-company-img" src="/images/derivco.png" />


        <div class="experience-header-container">
            <h3>
                Derivco - <em class="role">Software Developer</em>
            </h3>

            <div class="entry-header">
                <p class="date" style="margin-bottom:5px">
                    May 2019 - February 2020
                </p>

                <p style="margin-bottom:5px">
                    <%= render "badges/elixir.html" %>
                    <%= render "badges/ruby.html" %>
                    <%= render "badges/go.html" %>
                    <%= render "badges/rabbitmq.html" %>
                    <%= render "badges/postgresql.html" %>
                    <%= render "badges/docker.html" %>
                    <%= render "badges/ansible.html" %>
                    <%= render "badges/azure.html" %>
                </p>

            </div>
        </div>
